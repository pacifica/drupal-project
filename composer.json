{
    "authors": [
        {
            "email": "dmlb2000@gmail.com",
            "name": "David Brown",
            "role": "Developer"
        }
    ],
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": [
            "load.environment.php"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "description": "Project template for Drupal 8 Pacifica projects using composer",
    "extra": {
        "composer-exit-on-patch-failure": true,
        "drupal-scaffold": {
            "initial": {
                ".editorconfig": "../.editorconfig",
                ".gitattributes": "../.gitattributes"
            }
        },
        "installer-paths": {
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ]
        },
        "patchLevel": {
            "drupal/core": "-p2"
        }
    },
    "license": "LGPL-3.0-or-later",
    "minimum-stability": "dev",
    "name": "pacifica/drupal-project",
    "prefer-stable": true,
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "pacifica-dev": {
            "no-api": true,
            "type": "vcs",
            "url": "https://github.com/pacifica/pacifica-drupal-module.git"
        },
        "pacifica-profiles-dev": {
            "no-api": true,
            "type": "vcs",
            "url": "https://github.com/pacifica/pacifica-drupal-profiles.git"
        },
        "pacifica-theme-dev": {
            "no-api": true,
            "type": "vcs",
            "url": "https://github.com/pacifica/pacifica-drupal-theme.git"
        }
    },
    "require": {
        "php": ">=7.0.8",
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6.5",
        "drupal-composer/drupal-scaffold": "^2.5",
        "drupal/console": "^1.0.2",
        "drupal/core": "^8.7.0",
        "drush/drush": "^9.0.0",
        "pacifica/pacifica": "dev-8.x-1.x",
        "pacifica/pacifica_profiles": "dev-8.x-1.x",
        "pacifica/pacifica_theme": "dev-8.x-1.x",
        "vlucas/phpdotenv": "^2.4",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {
        "webflo/drupal-core-require-dev": "^8.7.0"
    },
    "scripts": {
        "configure-drupal-vm": [
            "docker cp scripts/drupal-vm.config.yml drupal-vm:/etc/ansible/drupal-vm/local.config.yml",
            "docker exec drupal-vm ansible-playbook /etc/ansible/drupal-vm/provisioning/playbook.yml"
        ],
        "nuke-testing": [
            "@stop-drupal-vm",
            "@remove-drupal-vm"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "remove-drupal-vm": [
            "docker rm drupal-vm"
        ],
        "setup-testing": [
            "@start-drupal-vm",
            "@configure-drupal-vm"
        ],
        "start-drupal-vm": [
            "php -r \"shell_exec('docker run --name drupal-vm -p 3306:3306 -p 8080:81 -d -v /sys/fs/cgroup:/sys/fs/cgroup:ro --privileged -v '.getcwd().':/var/www/drupalvm/drupal:ro geerlingguy/drupal-vm');\""
        ],
        "stop-drupal-vm": [
            "docker stop drupal-vm"
        ]
    },
    "type": "project"
}
